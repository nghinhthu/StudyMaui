        </ShellContent.Icon>
    </ShellContent>

    <ShellContent
        Title="FAQ"
        ContentTemplate="{DataTemplate views:FAQPage}"
        Route="FAQPage" >

        <ShellContent.Icon>
            <FontImageSource FontFamily="FontAwesomeRegular" Glyph="{x:Static icon:FontAwesomeIcon.DollarSign}" Color="White" Size="50"/>
        </ShellContent.Icon>
    </ShellContent>

    <ShellContent
        Title="Update profile"
        ContentTemplate="{DataTemplate views:UpdateProfilePage}"
        Route="UpdateProfilePage" >

        <ShellContent.Icon>
            <FontImageSource FontFamily="FontAwesomeRegular" Glyph="{x:Static icon:FontAwesomeIcon.DollarSign}" Color="White" Size="50"/>
