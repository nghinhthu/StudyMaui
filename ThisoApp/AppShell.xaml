        <ShellContent.Icon>
            <FontImageSource FontFamily="FontAwesomeRegular" Glyph="{x:Static icon:FontAwesomeIcon.DollarSign}" Color="White" Size="50"/>
        </ShellContent.Icon>
    </ShellContent>

    <ShellContent
        Title="Promotion"
        ContentTemplate="{DataTemplate views:PromotionPage}"
        Route="PromotionPage" >

        <ShellContent.Icon>
            <FontImageSource FontFamily="FontAwesomeRegular" Glyph="{x:Static icon:FontAwesomeIcon.DollarSign}" Color="White" Size="50"/>
        </ShellContent.Icon>
    </ShellContent>



    <ShellContent
        Title="Event"
        ContentTemplate="{DataTemplate views:EventPage}"
