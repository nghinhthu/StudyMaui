        <ShellContent.Icon>
            <FontImageSource FontFamily="FontAwesomeRegular" Glyph="{x:Static icon:FontAwesomeIcon.DollarSign}" Color="White" Size="50"/>
        </ShellContent.Icon>
    </ShellContent>

    <ShellContent
        Title="Utilities"
        ContentTemplate="{DataTemplate views:UtilititiesPage}"
        Route="UtilititiesPage" >

        <ShellContent.Icon>
            <FontImageSource FontFamily="FontAwesomeRegular" Glyph="{x:Static icon:FontAwesomeIcon.DollarSign}" Color="White" Size="50"/>
