<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ThisoApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ThisoApp"
    xmlns:views="clr-namespace:ThisoApp.Views"
    xmlns:icon="clr-namespace:ThisoApp.Common"
    Shell.FlyoutBehavior="Flyout"
    FlyoutBackgroundColor="AliceBlue"
    Title="MauiNavigationApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage">

        <ShellContent.Icon>
            <FontImageSource FontFamily="FontAwesomeRegular" Glyph="{x:Static icon:FontAwesomeIcon.HomeIcon}" Color="White" Size="50"/>
        </ShellContent.Icon>
    </ShellContent>

    <ShellContent
        Title="News"
        ContentTemplate="{DataTemplate views:NewsPage}"
        Route="NewsPage">

        <ShellContent.Icon>
            <FontImageSource FontFamily="FontAwesomeRegular" Glyph="{x:Static icon:FontAwesomeIcon.DollarSign}" Color="White" Size="50"/>
        </ShellContent.Icon>
    </ShellContent>

    <ShellContent
        Title="Outlet"
        ContentTemplate="{DataTemplate views:OutletPage}"
